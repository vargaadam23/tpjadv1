<html t:type="layout" title="Register | Bookstore"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<style>
.input-block-level{
    margin:20px 0;
}
.row{
    padding-top:50px;
}
</style>
<div class="row">
 <div class="col-3"></div>
    <div class="col-md-6 col-md-offset-3">
        <t:form t:id="register">
            <h2>Register</h2>
            <t:textfield t:id="username" class="input-block-level" validate="required" placeholder="Username"/>
            <t:textfield t:id="email" class="input-block-level" validate="required,email" placeholder="Email address"/>
            <t:passwordfield t:id="password" class="input-block-level" validate="required" placeholder="Password"/>
            <t:textfield t:id="firstName" class="input-block-level" validate="required" placeholder="First Name"/>
            <t:textfield t:id="lastName" class="input-block-level" validate="required" placeholder="Last Name"/>
            <t:textfield t:id="phone" class="input-block-level" validate="required" placeholder="phone"/>
            <t:submit class="btn btn-large btn-primary" value="Register"/>
        </t:form>
    </div>
     <div class="col-3"></div>
</div>

</html>
